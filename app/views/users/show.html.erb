<% provide(:title, 'User Info') %>

<h1>User Info</h1>
<div>
  <div id="user">
    <p>name: <%= @user.name %></p>
    <p>email: <%= @user.email %></p>
    <%= form_for(@post) do |p| %>
      <div><%= p.text_area :content, placeholder: "write your post here" %></div>
      <div id="commit"><%= p.submit 'commit', class: 'btn btn-large btn-primary' %></div>
    <% end %>
  </div>

  <span id="mypostlist">
    <% if @user.posts.any? %>
      <ul>
        <%= render @posts %>
      </ul>
      <%= will_paginate @posts %>
    <% end %>
  </span>

</div>